<h3>Login</h3>

<% if flash[:error] %>
    <p><strong><%= flash[:error] %></strong></p>
<% end %>

<%= form_with url: login_path, local: true do |f| %>
    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br><br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>
    <%= f.submit 'Login' %>
<% end %>