<script>

function openForm() {
    $("#left").css('opacity', '0.5');
    $("#right").css('opacity', '0.5');
    document.getElementById("myForm").style.display = "block";
}

function closeForm() {
    document.getElementById("myForm").style.display = "none";
    $("#left").css('opacity', '1');
    $("#right").css('opacity', '1');
}

</script>

<div id="left"><%= image_tag 'https://i.imgur.com/UPW88cI.png', id: 'login-image' %></div>

<div id="right">
    <h1 id="logo">Rental-Analytics</h1>    
    <h3 id="tagline">Helping tenants find homes they love</h3>
    <h3 id="login">Login</h3>
    <% if flash[:error] %>
        <p id="error"><strong><%= flash[:error] %></strong></p>
    <% end %>
    
    <% if flash[:success] %>
    <p id="success"><strong><%= flash[:success] %></strong></p>
    <% end %>
    
    <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username' %>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
        </div>

        <%= f.submit 'Sign in', class: 'btn btn-primary' %>
    <% end %>
    <button type="button" class="btn btn-primary"  onclick="openForm()">Signup</button>
</div>




<div class="form-popup" id="myForm">

    <h3 id="login">Sign up</h3>
    <%= form_with url: users_path, class: "form-container", local: true do |f| %>
        <%= f.label :username %>
        <br>
        <%= f.text_field :username %>
        <br><br>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br><br>
        <%= f.submit 'Sign up', class: 'btn btn-primary' %>
    <% end %>
    <button class="class="btn btn-primary" onclick="closeForm()">Close</button>
</div>