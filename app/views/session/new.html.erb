
<%#TODO: make two side by side divs%>

<script>
function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}

</script>

<div><%= image_tag 'https://i.imgur.com/UPW88cI.png', id: 'login-image' %></div>

<div id="right">
    <h1 id="logo">Rental-Analytics</h1>    
    <h3 id="tagline">Helping tenants find homes they love</h3>
    <h3 id="login">Login</h3>
    <% if flash[:error] %>
        <p id="error"><strong><%= flash[:error] %></strong></p>
    <% end %>
    
    <%= form_with url: login_path, local: true do |f| %>
        <%= f.label :username %>
        <br>
        <%= f.text_field :username %>
        <br><br>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br><br>
        <%= f.submit 'Sign in', class: 'login-btn' %>
    <% end %>
    <button class="login-btn" onclick="openForm()">Signup</button>
</div>



<div class="form-popup" id="myForm">
    <form action="<%=users_path%>" class="form-container" method="post">
      <h1>Signup</h1>
  
      <label for="username"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="username" required>
  
      <label for="password"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" required>
  
      <button type="submit" class="login-btn">Sign-Up</button>
      <button type="button" class="login-btn" onclick="closeForm()">Cancel</button>
    </form>
</div>