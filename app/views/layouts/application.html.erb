    |  <%# TODO: figure out how to space this correctly %>
    <%= link_to 'All Destinations', destinations_path, class: 'nav-link' %>
    <%= link_to 'Add Destination', new_destination_path, class: 'nav-link' %>
    
    <hr class="style-one">
    <%= yield %>
  </body>
</html>
